.calculator {
    max-width: 300px;
    margin: 50px auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.calculator h2 {
    margin-bottom: 20px;
}

.calculator div {
    margin-bottom: 10px;
}

.calculator label {
    display: inline-block;
    width: 150px;
}

.calculator input {
    width: 150px;
}

.calculator button {
    display: block;
    margin: 20px auto;
}

#result {
    margin-top: 20px;
    font-weight: bold;
}
